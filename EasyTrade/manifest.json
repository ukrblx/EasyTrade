{
    "manifest_version": 2,
    "name": "RoTrade",
    "version": "1.0",
    "description": "Shows RAP, value, etc. on the Roblox website.",
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "activeTab",
      "storage",
      "https://roblox.com/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["https://www.roblox.com/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon48.png"
      }
    },
    "options_page": "options.html"
  }
  